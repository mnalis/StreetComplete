<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/space_8dp"
    android:showDividers="middle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/quest_entrance_reference_flat_range_label"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <me.grantland.widget.AutofitLayout
                android:id="@+id/flatRangeStartInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_white_corners"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                >

                <EditText
                    android:id="@+id/flatRangeStartInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rectangular_sign_blue"
                    android:imeOptions="actionDone"
                    android:textColorHint="#2fff"
                    android:digits="0123456789"
                    tools:text="1"
                    android:padding="12dp"
                    style="@style/HousenumberEditText"
                    />

            </me.grantland.widget.AutofitLayout>

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/quest_entrance_reference_flat_range_to"
                />

            <me.grantland.widget.AutofitLayout
                android:id="@+id/flatRangeEndInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_white_corners"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                >

                <EditText
                    android:id="@+id/flatRangeEndInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rectangular_sign_blue"
                    android:imeOptions="actionDone"
                    android:textColorHint="#2fff"
                    android:digits="0123456789"
                    tools:text="13"
                    android:padding="12dp"
                    style="@style/HousenumberEditText"
                    />

            </me.grantland.widget.AutofitLayout>

            <Button
                android:id="@+id/toggleKeyboardButton"
                android:layout_width="64dp"
                android:layout_height="56dp"
                tools:text="abc"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                tools:ignore="RtlHardcoded"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
